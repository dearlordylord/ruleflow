{
  "compilerOptions": {
    // Build Performance
    "incremental": true,
    "composite": true,

    // Module System (Library/Node.js)
    "target": "ES2022",
    "module": "NodeNext",
    "moduleDetection": "force",

    // Import Handling
    "verbatimModuleSyntax": true,
    "rewriteRelativeImportExtensions": true,

    // Type Safety
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUnusedLocals": true,
    "noImplicitOverride": true,

    // Development
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,

    // Effect Integration
    "plugins": [
      {
        "name": "@effect/language-service"
      }
    ]
  }
}
